extends layout

block content
	body(id="page-top" class="index")
		nav.navbar.navbar-default.navbar-fixed-top
			div.container
				div.navbar-header.page-scroll
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
					</button>
					a.navbar-brand.page-scroll(href="#page-top") img(src="../images/trademark/weave-logo-transparent-Google-Size-2")


				<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				ul.nav.navbar-nav.navbar-right
					li.hidden
						a(href="#page-top")
					li
						a.page-scroll(href="#services") Services
					li
						a.page-scroll(href="#team") Team
					li
						a.page-scroll(href="#contact") Contact
				</div>

		header
			div.container
				div.intro-text
					div.intro-lead-in  
					div.intro-heading Weav


		section(id="services")
			div.container
				div.row
					div.col-lg-12.text-center
						h2.section-heading Services
						h3.section-subheading.text-muted We Develop Awesome Products that redefine tech-life.
				div.row.text-center
					div.col-md-4
						span.fa-stack.fa-4x
							i.fa.fa-circle.fa-stack-2x.text-primary
							i.fa.fa-shopping-cart.fa-stack-1x.fa-inverse
						h4.service-heading Mobile
						p.text-muted Creating solutions beyond a standard adaptive site and gamified app.  We innovate mobility.
					div.col-md-4
						span.fa-stack.fa-4x
							i.fa.fa-circle.fa-stack-2x.text-primary
							i.fa.fa-laptop.fa-stack-1x.fa-inverse
						h4.service-heading High Tech
						p.text-muted Working with leading engineering and science firms we play a vital role in all elements of Software implementation.
					div.col-md-4
						span.fa-stack.fa-4x
							i.fa.fa-circle.fa-stack-2x.text-primary
							i.fa.fa-lock.fa-stack-1x.fa-inverse
						h4.service-heading Something New
						p.text-muted Working with leading R &amp D minds and academic instituations, we create that which is not thought of ... yet.


		section(id="contact")
			div.container
				div.row
					div.col-lg-12.text-center
						h2.section-heading
						h3.section-subheading.text-muted 
				div.row
					div.col-md-5.text-center
						img(src="https://maps.googleapis.com/maps/api/staticmap?center=Melbourne,Melbourne,Vic&zoom=14&size=400x350&maptype=roadmap")
					div.col-md-5.col-sm-6.text-center
						p.text-inverse
							h5 The Innovation Lair believes in work-life balance <br \> We are designed for and encourage remote work
						p.text-inverse
						h4 Our Henchmen work here, there &amp anywhere
					div.col-md-6.text-center
						div.col-md-5.col-sm-6.text-left
							address
								strong 
								<br \> Melbourne
								<br \> Vic, Australia, 3930
								//br
								//abbr(title="Phone") P: 0417 456-7890
						div.col-md-6.text-center
							p.text-inverse 0417 577 369
							p
								ul.list-inline.social-buttons
									li 
										a(href="#")
											i.fa.fa-twitter
									li
										a(href="#")
											i.fa.fa-instagram
									li 
										a(href="#")
											i.fa.fa-linkedin
		footer
			div.container
				div.row
					div.col-md-4
						span.copyright Copyright &copy; The Innovation Lair 2015

		script(src="javascripts/jquery.js")
		script(src="bootstrap/js/bootstrap.min.js")
		script(src="http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js")
		script(src="javascripts/classie.js")
		script(src="javascripts/cbpAnimatedHeader.js")
		script(src="javascripts/jqBootstrapValidation.js")
		script(src="javascripts/agency.js")

